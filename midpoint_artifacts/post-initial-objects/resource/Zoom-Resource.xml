                    <outbound id="12">
                        <name>delayed delete</name>
                        <strength>strong</strength>
                        <timeFrom>
                            <referenceTime>
                                <path>$projection/activation/disableTimestamp</path>
                            </referenceTime>
                            <offset>P100D</offset>
                        </timeFrom>
                        <source>
